.list-group
  %a.list-group-item.active= t("Product")
  = link_to t("All_products"), admin_products_path, class: 'list-group-item'
  - @categories.each do |category|
    = link_to category.name, admin_products_path(category: category), class: 'list-group-item'
  = link_to t("Add_product"), new_admin_product_path, class: 'list-group-item list-group-item-info'
  = link_to t("recycled_products"), recycled_admin_products_path, class: 'list-group-item list-group-item-warning'
  %a.list-group-item.active= t("Category")
  = link_to t("All_categories"), admin_categories_path, class: 'list-group-item'
  = link_to t("Add_category"), new_admin_category_path, class: 'list-group-item list-group-item-info'