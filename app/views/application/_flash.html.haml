- flash.each do |flash_type, message|
  %div{ class: "alert alert-#{flash_filter(flash_type)} alert-dismissible", role: "alert" }
    %button{ type: "button", class: "close", "data-dismiss": "alert", "aria-label": "Close"}
      %span{ "aria-hidden": "true"}
        ='&times;'.html_safe
    = message
