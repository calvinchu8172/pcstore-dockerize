%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button{ type:"button", class: "navbar-toggle collapsed", "data-toggle": "collapse", "data-target": "#bs-example-navbar-collapse-1"}
        %span.sr-only= 'Toggle navigation'
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "PCstore", root_path, class: "navbar-brand"

    .collapse.navbar-collapse{id: "bs-example-navbar-collapse-1"}
      %ul.nav.navbar-nav.navbar-right
        = render 'cart'

        %li.dropdown
          %a{ href: "#", class: "dropdown-toggle", "data-toggle": "dropdown", "role": "button", "aria-expanded": "false" }
            = render 'language'
            %span.caret
          %ul.dropdown-menu{ role: "menu" }
            %li= link_to "繁體中文", controller: controller_name, action: action_name, locale: "zh-TW"
            %li= link_to "English", controller: controller_name, action: action_name, locale: "en"

        - if user_signed_in?
          %li= link_to "SSO 登出", destroy_user_session_path, method: :delete, title: "Log out"
        - else
          %li= link_to "SSO 登入", user_sso_omniauth_authorize_path, title: "Log in"

        - unless user_signed_in?
          %li= link_to t("Sign_in"), new_user_registration_path
          %li= link_to t("Log_in"), new_user_session_path
        - else
          %li.dropdown
            %a{ href: "#", class: "dropdown-toggle", "data-toggle": "dropdown", role: "button", "aria-expanded": "false"}
              = current_user.email
              %span.caret
            %ul.dropdown-menu{ role:"menu" }
              - if current_user.is_admin?
                %li= link_to t("Back_stage_system"), admin_dashboards_path
              %li= link_to t("Edit"), edit_user_registration_path
              %li.divider
              %li= link_to t("Log_out"), destroy_user_session_path, method: :delete
              - if current_user.admin == false
                %li= link_to t("Set_as_admin"), set_admin_users_path, method: :post
              - else
                %li= link_to t("Remove_admin"), remove_admin_users_path, method: :post